{
  "$schema": "./loai-accreditation-charter.schema.json",
  "title": "LoAI Accredited Credential Record",
  "description": "Standardized credential template issued under the LoAI Accreditation Board for AI Health & Empowerment.",
  "type": "object",

  "properties": {
    "credential:id": {
      "type": "string",
      "pattern": "^LoAI-[A-Z]+-[L][1-3]-[0-9]{4}$",
      "description": "Unique LoAI credential identifier (e.g., LoAI-DAIHTG-L3-2025)."
    },
    "credential:title": {
      "type": "string",
      "enum": [
        "Certified AI Health Technician",
        "Certified AI Medical Systems Trainer",
        "Doctor of AI Health Technology Governance"
      ]
    },
    "credential:holder": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "did": { "type": "string", "pattern": "^did:web:[a-z0-9-]+\\.github\\.io$" },
        "email": { "type": "string", "format": "email" },
        "issued_by": {
          "type": "string",
          "const": "LoAI Accreditation Board — AI Health & Empowerment"
        }
      },
      "required": ["name", "did", "issued_by"]
    },

    "credential:issued_on": {
      "type": "string",
      "format": "date-time"
    },
    "credential:valid_until": {
      "type": "string",
      "format": "date-time"
    },

    "credential:checksum": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{128}$"
    },

    "credential:epoch": {
      "type": "integer",
      "minimum": 1735870000
    },

    "credential:level": {
      "type": "integer",
      "enum": [1, 2, 3]
    },

    "credential:alignment": {
      "type": "object",
      "description": "Frameworks aligned to this credential.",
      "properties": {
        "deliver_mode": { "type": "string", "const": "v3.0" },
        "medical_ai": { "type": "string", "const": "v2.0" },
        "embodiment_atlas": { "type": "string", "const": "v1.0" },
        "ethics_layers": {
          "type": "object",
          "properties": {
            "E1": { "type": "string", "const": "Active" },
            "C1": { "type": "string", "const": "Active" },
            "A1": { "type": "string", "const": "Active" }
          },
          "required": ["E1", "C1", "A1"]
        }
      },
      "required": ["deliver_mode", "medical_ai", "ethics_layers"]
    },

    "credential:verification": {
      "type": "object",
      "description": "Live verification and registry link.",
      "properties": {
        "registry_anchor": {
          "type": "string",
          "const": "LoAI-2024-0414-001"
        },
        "qr": { "type": "string", "format": "uri" },
        "hash": { "type": "string", "pattern": "^[a-fA-F0-9]{128}$" },
        "signature": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Active", "Expired", "Revoked"]
        }
      },
      "required": ["registry_anchor", "qr", "hash", "status"]
    }
  },

  "required": [
    "credential:id",
    "credential:title",
    "credential:holder",
    "credential:issued_on",
    "credential:checksum",
    "credential:alignment",
    "credential:verification"
  ],

  "examples": [
    {
      "credential:id": "LoAI-DAIHTG-L3-2025",
      "credential:title": "Doctor of AI Health Technology Governance",
      "credential:holder": {
        "name": "Rev. Dr. Susanna J. Carver PhD",
        "role": "Founder / Lead Architect",
        "did": "did:web:suscarver75-ui.github.io",
        "email": "suscarver75@gmail.com",
        "issued_by": "LoAI Accreditation Board — AI Health & Empowerment"
      },
      "credential:issued_on": "2025-11-05T12:00:00Z",
      "credential:valid_until": "2027-11-05T12:00:00Z",
      "credential:checksum": "e4a1d5c6b8f7a9c3d2e0b4a5f9e8c7b6a1d3f5c9e2b4a6f7c1e9d0f2b3a7c6d8",
      "credential:epoch": 1735870000,
      "credential:level": 3,
      "credential:alignment": {
        "deliver_mode": "v3.0",
        "medical_ai": "v2.0",
        "embodiment_atlas": "v1.0",
        "ethics_layers": {
          "E1": "Active",
          "C1": "Active",
          "A1": "Active"
        }
      },
      "credential:verification": {
        "registry_anchor": "LoAI-2024-0414-001",
        "qr": "https://suscarver75-ui.github.io/global-ai-registry",
        "hash": "9f1a8b7c6e5d4a3b2c1f0a9e8d7c6b5a4f3e2d1c0b9a8f7e6d5c4b3a2f1e0d9",
        "signature": "0xLOAI_CRED_SIG_2025_001",
        "status": "Active"
      }
    }
  ]
}
